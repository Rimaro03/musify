<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="PinnedPlaylistStyle" parent="CardView">
        <item name="android:background">?attr/colorSecondaryContainer</item>
        <item name="cardCornerRadius">@dimen/card_corner_radius</item>
    </style>

    <style name="TrackStyle" parent="CardView">
        <item name="cardBackgroundColor">@android:color/transparent</item>
        <item name="cardCornerRadius">@dimen/card_corner_radius</item>
    </style>

    <style name="icon_button_style" parent="Widget.AppCompat.ImageButton">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:layout_margin">15dp</item>
    </style>

    <style name="play_icon_button_style" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>
</resources>