<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="PinnedPlaylistStyle" parent="CardView">
        <item name="android:background">?attr/colorSecondaryContainer</item>
        <item name="cardCornerRadius">@dimen/card_corner_radius</item>
    </style>

    <style name="LibraryPlaylistStyle" parent="CardView">
        <item name="android:background">?attr/colorSecondaryContainer</item>
        <item name="cardCornerRadius">@dimen/card_corner_radius</item>
    </style>

    <style name="TrackStyle" parent="CardView">
        <item name="android:background">?attr/colorSecondaryContainer</item>
        <item name="cardCornerRadius">@dimen/card_corner_radius</item>
    </style>

    <style name="IconButtonStyle" parent="Widget.AppCompat.ImageButton">
        <item name="android:background">?attr/selectableItemBackgroundBorderless</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:layout_margin">15dp</item>
    </style>

    <style name="PlayIconButtonStyle">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="LibraryFilterStyle" parent="CardView">
        <item name="android:background">?attr/colorSecondaryContainer</item>
        <item name="cardCornerRadius">@dimen/chip_corner_radius</item>
        <item name="android:layout_marginEnd">10dp</item>
    </style>

</resources>