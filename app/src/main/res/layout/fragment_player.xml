<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:fitsSystemWindows="true">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appBarLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

            <LinearLayout
                android:id="@+id/miniPlayerContainer"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/player_back_btn"
                    style="@style/IconButtonStyle"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:contentDescription="@string/add_fav"
                    android:scaleType="centerCrop"
                    android:src="@drawable/add_circle_24px" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="PLAYING FROM ARTIST" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="Joji"
                        android:textStyle="bold" />

                </LinearLayout>

                <ImageButton
                    android:id="@+id/player_more_btn"
                    style="@style/IconButtonStyle"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:contentDescription="@string/add_fav"
                    android:scaleType="centerCrop"
                    android:src="@drawable/add_circle_24px" />

            </LinearLayout>

    </com.google.android.material.appbar.AppBarLayout>

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="25dp"
        android:layout_marginEnd="25dp"
        android:layout_marginTop="40dp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/player_track_img"
            android:layout_width="360dp"
            android:layout_height="360dp"
            android:contentDescription="Track cover"
            android:layout_gravity="center"
            android:src="@drawable/mock_img"
            android:layout_marginTop="50dp"
            android:layout_marginBottom="50dp"/>

        <LinearLayout
            android:id="@+id/player_metadata_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@+id/player_track_img">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/player_track_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Track name"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:maxLines="1"
                    android:ellipsize="end"/>

                <TextView
                    android:id="@+id/player_track_artist"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Track name"
                    android:maxLines="1"
                    android:ellipsize="end"/>

            </LinearLayout>

            <ImageButton
                android:id="@+id/player_add_fav_btn"
                style="@style/IconButtonStyle"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:contentDescription="@string/add_fav"
                android:scaleType="centerCrop"
                android:src="@drawable/add_circle_24px" />

        </LinearLayout>

        <SeekBar
            android:id="@+id/player_seekbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/player_metadata_container"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="10dp">

            <ImageButton
                android:id="@+id/player_skip_prev_btn"
                style="@style/IconButtonStyle"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:contentDescription="Skip prev"
                android:scaleType="centerCrop"
                android:src="@drawable/skip_previous_24px" />

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/player_play_btn"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:scaleType="center"
                android:layout_gravity="center_vertical"
                android:contentDescription="Play"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:background="?attr/colorTertiaryContainer"
                app:shapeAppearanceOverlay="@style/PlayIconButtonStyle"
                android:src="@drawable/play_arrow_24px"/>

            <ImageButton
                android:id="@+id/player_skip_next_btn"
                style="@style/IconButtonStyle"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:contentDescription="Skip next"
                android:scaleType="centerCrop"
                android:src="@drawable/skip_next_24px" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1" />
    </LinearLayout>

</LinearLayout>