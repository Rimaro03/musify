<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="wrap_content"
    android:layout_width="0dp"
    android:layout_columnWeight="1"
    android:layout_margin="@dimen/pinned_playlist_margin"
    style="@style/PinnedPlaylistStyle">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center_vertical"
        android:paddingStart="0dp"
        android:paddingEnd="2dp">

        <!-- image view -->
        <ImageView
            android:id="@+id/pinned_playlist_icon"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:contentDescription="@string/pin_play_desc"
            android:src="@drawable/media3_icon_artist"/>

        <Space
            android:layout_width="12dp"
            android:layout_height="0dp" />

        <TextView
            android:id="@+id/pinned_playlist_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textStyle="bold"
            android:maxLines="2"
            android:ellipsize="end"
            android:layout_gravity="center_vertical"/>

    </LinearLayout>
</androidx.cardview.widget.CardView>
